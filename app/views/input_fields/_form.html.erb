<%= form_with(model: input_field) do |form| %>
  <% if input_field.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(input_field.errors.count, "error") %> prohibited this input_field from being saved:</h2>

      <ul>
        <% input_field.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :placeholder, style: "display: block" %>
    <%= form.text_field :placeholder %>
  </div>

  <div>
    <%= form.label :label, style: "display: block" %>
    <%= form.text_field :label %>
  </div>

  <div>
    <%= form.label :required, style: "display: block" %>
    <%= form.check_box :required %>
  </div>

  <div>
    <%= form.label :form_id, style: "display: block" %>
    <%= form.number_field :form_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
